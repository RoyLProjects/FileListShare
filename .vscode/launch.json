{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (tsx)",
      "cwd": "${workspaceFolder}/apps/backend",

      // Run Node and preload tsx using the new register API
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx"],

      // Your entrypoint (TS)
      "program": "${workspaceFolder}/apps/backend/src/index.ts",

      // Debugging niceties
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",

      // TS + source maps
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],

      // Environment
      "envFile": "${workspaceFolder}/apps/backend/.env"
    },
    {
      "name": "Debug Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/frontend"
    }
  ]
}
